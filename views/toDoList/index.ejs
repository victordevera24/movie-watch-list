<%- include('../partials/header') %>

<a href="/toDoList" <%- title === 'To Do List' ? 'class="active"' : '' %>>ADD TASK</a>
<br><br>
<table>

    <tbody>
        <% tasks.forEach(function(t) { %>
        <tr>
          <td><%= t.task %></td>
          <td><form action="/tasks/<%=t._id%>?_method=DELETE" method="POST"><input type="submit" value="Delete"></form></td>
          <td><a href="/taskEdit/<%=t._id%>" >Edit</a></td>
        </tr>
        <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>
